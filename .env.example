# === Application ===
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-secret-key-min-32-chars

# === Database (future services) ===
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=biohack_debunker
POSTGRES_USER=app
POSTGRES_PASSWORD=secure-password

# === Redis ===
REDIS_URL=redis://redis:6379/0

# === Qdrant ===
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# === AI Services ===
PUBMED_BASE_URL=https://eutils.ncbi.nlm.nih.gov/entrez/eutils
PUBMED_API_KEY=

# === LLM ===
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o-mini
LLM_MAX_TOKENS=8192
LLM_RESPONSE_FORMAT=
LLM_TIMEOUT=30
LLM_READ_TIMEOUT=120
OPENAI_API_KEY=
OPENAI_BASE_URL=

# === DeepEval ===
DEEPEVAL_MODEL=gpt-4o-mini
DEEPEVAL_VERDICT_THRESHOLD=0.8
DEEPEVAL_FAITHFULNESS_THRESHOLD=0.5
DEEPEVAL_CLAIM_MATCH_THRESHOLD=0.6
DEEPEVAL_MAX_CLAIMS_PER_CASE=10
DEEPEVAL_OUTPUT_DIR=/app/services/analysis-service/deepeval-outputs

# === Research Service ===
RESEARCH_CACHE_TTL_SECONDS=3600
RESEARCH_USE_QDRANT=false
RESEARCH_SERVICE_PORT=8003

# === Transcription Service ===
YTDLP_BIN=yt-dlp

# === API Gateway ===
TRANSCRIPTION_SERVICE_URL=http://transcription-service:8001
ANALYSIS_SERVICE_URL=http://analysis-service:8002
RATE_LIMIT_REQUESTS=60
RATE_LIMIT_WINDOW=60
ENABLE_PUBLIC_FEED=true
ENABLE_BILLING=false
FREE_TIER_CREDITS=3
